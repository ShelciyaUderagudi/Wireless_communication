import numpy as np
import matplotlib.pyplot as plt

# SNR and bandwidth values
snr_db = np.linspace(-5, 20, 50)
B = 1e6  #1 MHz

# Convert SNR from dB to linear
snr_linear = 10**(snr_db/10)

# Shannon capacity formula
throughput = B * np.log2(1 + snr_linear)

#print(throughput)

#plot
plt.figure()
plt.plot(snr_db, throughput)
plt.xlabel("SNR (dB)")
plt.ylabel("Throughput (bps)")
plt.title("SNR vs Throughput")
plt.grid(True)
plt.show()
